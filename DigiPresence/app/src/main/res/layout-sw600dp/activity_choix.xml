<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/black_bg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo_digipresence_white_xxhdpi"
                android:contentDescription="@string/description_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:text="@string/activity_choix_message"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="@dimen/size_title_tablet"/>

        </FrameLayout>

        <Button
            android:id="@+id/btn_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/green_fill_rounded_color"
            android:text="Arrivée"
            android:layout_marginVertical="20dp"
            android:textSize="32sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="220dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/orange_fill_rounded_color"
                android:text="Départ Pause"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:paddingHorizontal="36dp"
                android:paddingVertical="8dp"
                android:textSize="28sp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/orange_fill_rounded_color"
                android:text="Arrivée Pause"
                android:layout_marginVertical="20dp"
                android:paddingHorizontal="36dp"
                android:paddingVertical="8dp"
                android:textSize="28sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/purple_fill_rounded_color"
                android:text="Départ Mission"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textSize="28sp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/purple_fill_rounded_color"
                android:text="Arrivée Mission"
                android:layout_marginVertical="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textSize="28sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bluesky_fill_rounded_color"
                android:text="Départ Conge"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:paddingHorizontal="28dp"
                android:paddingVertical="8dp"
                android:textSize="28sp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bluesky_fill_rounded_color"
                android:text="Arrivée Congé"
                android:layout_marginVertical="20dp"
                android:paddingHorizontal="28dp"
                android:paddingVertical="8dp"
                android:textSize="28sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/red_fill_rounded_color"
            android:text="Absent(e)"
            android:layout_marginVertical="20dp"
            android:textSize="32sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="200dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/blue_fill_rounded_color"
            android:text="Départ"
            android:textSize="32sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="220dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="13.7dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/copyright"
            android:textColor="#757575"
            android:textSize="13.3sp" />

    </LinearLayout>

</RelativeLayout>