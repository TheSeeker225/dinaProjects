<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChoixActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/black_bg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/description_logo"
                android:src="@drawable/logo_digipresence_white_xxhdpi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:text="@string/activity_choix_message"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_title_tablet" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="@drawable/green_fill_rounded_color"
            android:paddingHorizontal="220dp"
            android:paddingVertical="8dp"
            android:text="@string/bouton_text_arriv_e"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dp"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/orange_fill_rounded_color"
                android:paddingHorizontal="36dp"
                android:paddingVertical="8dp"
                android:text="@string/bouton_text_d_part_pause"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btn_ap"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/orange_fill_rounded_color"
                android:paddingHorizontal="36dp"
                android:paddingVertical="8dp"
                android:text="@string/bouton_text_arriv_e_pause"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dm"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/purple_fill_rounded_color"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/bouton_text_d_part_mission"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn_am"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/purple_fill_rounded_color"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/bouton_text_arriv_e_mission"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dc"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bluesky_fill_rounded_color"
                android:paddingHorizontal="28dp"
                android:paddingVertical="8dp"
                android:text="@string/bouton_text_d_part_conge"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn_ac"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/bluesky_fill_rounded_color"
                android:paddingHorizontal="28dp"
                android:paddingVertical="8dp"
                android:text="@string/bouton_text_arriv_e_cong"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="@drawable/red_fill_rounded_color"
            android:paddingHorizontal="200dp"
            android:paddingVertical="8dp"
            android:text="@string/bouton_text_absent_e"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/blue_fill_rounded_color"
            android:paddingHorizontal="220dp"
            android:paddingVertical="8dp"
            android:text="@string/bouton_text_d_part"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="13.7dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/copyright"
            android:textColor="#757575"
            android:textSize="13.3sp"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</RelativeLayout>